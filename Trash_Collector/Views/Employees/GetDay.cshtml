@model Trash_Collector.Models.Customer

<h2>Please Select Day</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">           
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.WeeklyPickupDay, "Please Select a Day", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.WeeklyPickupDay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
