@model Trash_Collector.Models.EmployeeCustomersViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Todays Pickups</h2>

    @for (int i = 0; i < Model.LocalCustomers.Count; i++)
    {
        <div>
            <div>
                <text>@Model.LocalCustomers[i].FirstName  @Model.LocalCustomers[i].LastName</text>
                <br />
                <text>@Model.LocalCustomers[i].Address.StreetNumber @Model.LocalCustomers[i].Address.Street @Model.LocalCustomers[i].Address.City</text>
                <br />
                @Html.ActionLink("Mark Complete", "Pickup", new { id = Model.LocalCustomers[i].ID})
            </div>
        </div>

    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>

}