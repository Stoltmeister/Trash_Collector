@model Trash_Collector.Models.Customer

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Customer Dashboard</h1>
    <p class="lead">Change your weekly pickup, schedule special pickups, pause and resume services and see billing information.</p>    
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Weekly Pickup Day</h2>
        <p>
            @if (Model.WeeklyPickupDay == null)
            {
                <text><strong>Not Currently Set</strong></text>
            }
            @Model.WeeklyPickupDay 
        </p>
        <p><a class="btn btn-default" href="@Url.Action("WeeklyPickUp", "Customers", new { id = Model.ID })">Change Pickup Day &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Special Pickups</h2>
        <p>
            @if (Model.SpecialPickupDay == null)
            {
                <text><strong>No Special Pickups Scheduled</strong></text>
            }
            @Model.SpecialPickupDay
        </p>
        <p><a class="btn btn-default" href="@Url.Action("SpecialPickup", "Customers", new { id = Model.ID })">Change Pickup Day &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>